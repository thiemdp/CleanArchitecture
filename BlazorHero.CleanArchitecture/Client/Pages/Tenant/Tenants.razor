@page "/tenant/tenants"
@attribute [Authorize(policy: Permissions.Tenants.View)]
@inject Microsoft.Extensions.Localization.IStringLocalizer<Tenants> _localizer
@using BlazorHero.CleanArchitecture.Application.Responses.Tenant
@using BlazorHero.CleanArchitecture.Shared.Constants.Tenant

<HeroTitle Title="@_localizer["Tenants"]" Description="@_localizer["Manage Tenants."]" />
<MudTable Hover="true" Elevation="25" ServerData="@(new Func<TableState, Task<TableData<TenantResponse>>>(ServerReload))" @ref="@_table"  Dense="@_dense" Bordered="@_bordered" Striped="@_striped" Filter="new Func<TenantResponse, bool>(Search)" @bind-role="_tenant">
    <ToolBarContent>
        <div class="justify-center mud-text-align-center">
            <AuthorizedComponent Policy="@Permissions.Tenants.Create">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="(() => InvokeModal())">@_localizer["Create"]</MudButton>
            </AuthorizedComponent>
        </div>
        <MudButton Variant="Variant.Filled" OnClick="@(() => OnSearch(""))" Color="Color.Secondary">@_localizer["Reload"]</MudButton>
        <MudToolBarSpacer />
        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder="@_localizer["Search"]" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortBy="new Func<TenantResponse, object>(x => x.Id)">@_localizer["Id"]</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<TenantResponse, object>(x => x.Identifier)">@_localizer["Identifier"]</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<TenantResponse, object>(x => x.Name)">@_localizer["Name"]</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<TenantResponse, object>(x => x.IsActive)">@_localizer["Active"]</MudTableSortLabel></MudTh>
        <MudTh Style="text-align:right">@_localizer["Actions"]</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="@_localizer["Identifier"]">
            <MudHighlighter Text="@context.Identifier" HighlightedText="@_searchString" />
        </MudTd>
        <MudTd DataLabel="@_localizer["Name"]">
            <MudHighlighter Text="@context.Name" HighlightedText="@_searchString" />
        </MudTd>
        <MudTd DataLabel="Active"><MudCheckBox @bind-Checked="@context.IsActive" ReadOnly Color="Color.Secondary"></MudCheckBox></MudTd>
        <MudTd DataLabel="@_localizer["Actions"]" Style="text-align: right">
            @if (_canEditPermisstion && context.Identifier != TenantConstants.DefaultTenantId)
            {
                <MudFab Color="Color.Primary" Icon="@Icons.Material.Filled.Edit" Size="Size.Small" IconSize="Size.Small" @onclick="@(() => InvokeModal(@context.Id))" Class="ml-2"> </MudFab>
            }
            @if (_canDeletePermisstion && context.Identifier != TenantConstants.DefaultTenantId)
            {
                <MudFab Color="Color.Error" Icon="@Icons.Material.Filled.Delete" Size="Size.Small" IconSize="Size.Small" @onclick="@(async() => await Delete(@context.Id))"></MudFab>
            }
        </MudTd>
    </RowTemplate>
    <FooterContent>
        <MudSwitch @bind-Checked="@_dense" Color="Color.Secondary" Style="margin-left: 5px;">@_localizer["Dense"]</MudSwitch>
        <MudSwitch @bind-Checked="@_striped" Color="Color.Tertiary" Style="margin-left: 5px;">@_localizer["Striped"]</MudSwitch>
        <MudSwitch @bind-Checked="@_bordered" Color="Color.Warning" Style="margin-left: 5px;">@_localizer["Bordered"]</MudSwitch>
    </FooterContent>
    <PagerContent>
        <TablePager />
    </PagerContent>
</MudTable>
